/* 没有更多 */
.noMore{
  display: flex;
  justify-content: center;
  align-items: center;
  position: absolute;
  left: 0;
  bottom: 96rpx;
  width: 100%;
}
.noMore text{
  color: #bacdc3;
  font-size: 30rpx;
}
.noMore image{
  width: 107rpx;
  height: 64rpx;
  opacity: 0.3;
}